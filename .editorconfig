# This is an EditorConfig file, which helps maintain consistent coding styles between different editors and IDEs.
# See https://EditorConfig.org for more information.

# Indicate that this is the top-most EditorConfig file in the directory tree.
root = true

# Global settings for all files.
[*]
charset = utf-8                # Use UTF-8 character encoding.
indent_style = space           # Use spaces for indentation.
end_of_line = lf               # Use Unix-style line endings.
trim_trailing_whitespace = true # Remove any whitespace characters at the end of each line.
insert_final_newline = true    # Ensure files end with a newline.

# Python files: use 4 spaces for indentation.
[*.py]
indent_size = 4

# YAML files: use 2 spaces for indentation.
[*.{yaml,yml}]
indent_size = 2

# Makefiles: use tabs for indentation (required by Make).
[Makefile]
indent_style = tab

# Markdown files: do not trim trailing whitespace and do not enforce line length.
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# JSON files: use 2 spaces for indentation.
[*.json]
indent_size = 2

# Shell script files: use 2 spaces for indentation and Unix-style line endings.
[*.sh]
indent_size = 2
